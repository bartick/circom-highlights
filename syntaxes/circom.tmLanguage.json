{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Circom",
	"patterns": [
		{
			"include": "#comments"
		}
	],
	"repository": {
		"comments": {
			"patterns": [{
				"name": "comment.line.single-line.circom",
				"match": "//.*$"
			}, {
				"name": "comment.block.circom",
				"begin": "/\\*",
				"end": "\\*/"
			}]
		}
	},
	"scopeName": "source.circom"
}